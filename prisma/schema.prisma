generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id            String   @id @default(uuid())
  session_id    String?
  teacher_name  String
  email         String   @unique
  password_hash String
  courses       Course[]

  @@map("teachers")
}

model Course {
  id          String  @id @default(uuid())
  course_name String
  code        String  @unique
  teacher     Teacher @relation(fields: [teacher_id], references: [id])
  teacher_id  String
  Student     Student @relation(fields: [student_id], references: [id])
  student_id  String

  @@map("courses")
}

model Student {
  id            String   @id @default(uuid())
  session_id    String?
  student_name  String
  user_cfg      Bytes?
  email         String   @unique
  password_hash String
  saves         Save[]
  courses       Course[]

  @@map("students")
}

model Save {
  id           String  @id @default(uuid())
  level_player Int
  time_played  Int
  actual_quest String
  game_save    Bytes?
  course_id    String?
  student      Student @relation(fields: [student_id], references: [id])
  student_id   String

  @@map("saves")
}
